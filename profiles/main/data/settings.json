{
    //
    // ############################## Text Editor ##############################
    //
    "editor.detectIndentation": false,
    "editor.fontFamily": "Consolas, monospace",
    "editor.fontSize": 14,
    "editor.insertSpaces": true,
    "editor.largeFileOptimizations": false,
    "editor.minimap.enabled": false,
    "editor.mouseWheelZoom": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        100,
        120
    ],
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "files.autoGuessEncoding": true,
    "files.exclude": {
        "**/.git": true,
        "**/.vscode-remote-containers": true,
        "**/.vscode-server": true,
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "diffEditor.ignoreTrimWhitespace": true,
    //
    // ############################## Workbench ##############################
    //
    "workbench.colorTheme": "Default Dark+",
    "workbench.editor.wrapTabs": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "none",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.tree.indent": 15,
    //
    // ############################## Window ##############################
    //
    "window.restoreWindows": "one",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
    //
    // ############################## Function ##############################
    //
    "extensions.autoUpdate": false,
    "notebook.lineNumbers": "on",
    "remote.autoForwardPortsSource": "hybrid",
    "terminal.integrated.scrollback": 5000,
    "terminal.integrated.mouseWheelZoom": true,
    //
    // ############################## Application ##############################
    //
    "update.mode": "none",
    "update.showReleaseNotes": false,
    //
    // ############################## Security ##############################
    //
    "security.workspace.trust.enabled": false,
    //
    // ############################## Language ##############################
    //
    //
    // Language - HTML
    //
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.tabSize": 2,
    },
    //
    // Language - JSON
    //
    "[json]": {
        "editor.tabSize": 2,
    },
    //
    // Language - Markdown
    //
    "[markdown]": {
        "editor.fontFamily": "'BIZ UDゴシック', monospace",
        "editor.tabSize": 2,
        "editor.wordWrap": "off",
        "files.trimTrailingWhitespace": false,
        "diffEditor.ignoreTrimWhitespace": true,
    },
    //
    // Language - XML
    //
    "[xml]": {
        "editor.tabSize": 2,
    },
    //
    // Language - YAML
    //
    "redhat.telemetry.enabled": true,
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.tabSize": 2,
    },
    //
    // ############################## Extension ##############################
    //
    //
    // Extension - Sync Settings
    //
    "syncSettings.gitInitMessage": "chore: init settings of profile({{profile}})",
    "syncSettings.gitUpdateMessage": "chore: update settings of profile({{profile}})",
    //
    // Extension - Markdown
    //
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "markdown.preview.breaks": true,
    //
    // Extension - Markdown All in One
    //
    "markdown.extension.list.indentationSize": "inherit",
    "markdown.extension.theming.decoration.renderHardLineBreak": true,
    "markdown.extension.toc.updateOnSave": false,
    "markdown.styles": [
        "/home/silverag/workspace/Git/doc/github-markdown-css/github-markdown-light.css",
        "/home/yu_endo/workspace/Git/hobby-account/github-markdown-css/github-markdown-light.css",
    ],
    //
    // Extension - Markdown Preview Github Styling
    //
    "markdown-preview-github-styles.colorTheme": "dark",
    "markdown-preview-github-styles.darkTheme": "dark_dimmed",
    //
    // Extension - Markdown PDF
    //
    "markdown-pdf.executablePath": "/usr/bin/chromium-browser",
    "markdown-pdf.includeDefaultStyles": false, // https://github.com/yzane/vscode-markdown-pdf/blob/master/styles/markdown-pdf.css
    "markdown-pdf.styles": [
        "/home/silverag/workspace/Git/doc/github-markdown-css/github-markdown-light.css",
        "/home/yu_endo/workspace/Git/hobby-account/github-markdown-css/github-markdown-light.css",
    ],
    "markdown-pdf.breaks": true,
    "markdown-pdf.headerTemplate": "<div style=\"font-size: 9px; margin-left: auto; margin-right: 1cm;\">%%ISO-DATE%%</div>", // NOTE ここで日付を指定する
    //
    // Extension - Marp
    //
    "markdown.marp.themes": [
        "https://raw.githubusercontent.com/silverag-corgi/marp-theme-for-me/main/themes/gaia_for_me.scss",
    ],
    //
    // Extension - Draw.io Integration
    //
    "hediet.vscode-drawio.resizeImages": null,
    //
    // Extension - Git
    //
    "git.autoRepositoryDetection": "subFolders",
    "git.repositoryScanMaxDepth": -1,
    "git.scanRepositories": [
        "~/workspace/Git"
    ],
    //
    // Extension - Git Graph
    //
    "git-graph.commitDetailsView.location": "Docked to Bottom",
    "git-graph.date.format": "ISO Date & Time",
    "git-graph.date.type": "Commit Date",
    "git-graph.dialog.rebase.ignoreDate": false,
    "git-graph.dialog.rebase.launchInteractiveRebase": true,
    "git-graph.referenceLabels.alignment": "Branches (on the left) & Tags (on the right)",
    "git-graph.repository.onLoad.showCheckedOutBranch": true,
    "git-graph.sourceCodeProviderIntegrationLocation": "More Actions",
    //
    // Extension - GitLens
    //
    "gitlens.blame.format": "${message|50?} ${date|10-}",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.format": "${author, }${date}${' via 'pullRequest}${ - message|50?}",
    "gitlens.defaultDateFormat": "YYYY/MM/DD HH:mm:ss",
    "gitlens.defaultTimeFormat": "HH:mm:ss",
    "gitlens.statusBar.command": "gitlens.showCommitsInView",
    "gitlens.statusBar.format": "${author, }${date}${' via 'pullRequest}",
    "gitlens.views.formats.commits.description": "${author, }${date}",
    "gitlens.views.formats.stashes.description": "${stashOnRef, }${date}",
    "gitlens.remotes": [
        {
            "domain": "github.com",
            "type": "GitHub",
            "protocol": "https",
        },
        {
            "domain": "git.tech.fancs.com",
            "type": "GitHub",
            "protocol": "https",
        },
    ],
    //
    // Extension - GitHub Enterprise
    //
    "github-enterprise.uri": "https://git.tech.fancs.com",
    //
    // Extension - GitHub Copilot
    //
    "github.copilot.chat.localeOverride": "ja",
    "github.copilot.advanced": {
        "authProvider": "github"
    },
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    //
    // Extension - Todo Tree
    //
    "todo-tree.general.tagGroups": {
        "TODO": [
            "HACK",
        ],
        "FIXME": [
        ],
        "NOTE": [
            "MEMO",
        ],
        "DONE": [
        ],
    },
    "todo-tree.general.tags": [
        "TODO", "HACK",
        "FIXME",
        "NOTE", "MEMO",
        "DONE",
        "[ ]",
        "[x]",
        "[-]",
    ],
    "todo-tree.highlights.defaultHighlight": {
        "background": "#c0c0c0",
        "type": "text",
        "opacity": 20,
        "gutterIcon": true,
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "tasklist",
            "foreground": "#ffa500",
            "iconColour": "#ffa500",
        },
        "FIXME": {
            "icon": "flame",
            "foreground": "#ff5555",
            "iconColour": "#ff5555",
        },
        "NOTE": {
            "icon": "pencil",
            "foreground": "#00bfff",
            "iconColour": "#00bfff",
        },
        "DONE": {
            "icon": "pencil",
            "foreground": "#33cc33",
            "iconColour": "#33cc33",
        },
        "[ ]": {
            "icon": "issue-opened",
            "foreground": "#33cc33",
            "iconColour": "#33cc33",
        },
        "[x]": {
            "icon": "issue-closed",
            "foreground": "#00bfff",
            "iconColour": "#00bfff",
        },
        "[-]": {
            "icon": "issue-closed",
            "foreground": "#ffff00",
            "iconColour": "#ffff00",
        },
    },
    "todo-tree.regex.regex": "(//| *|#|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)",
    "todo-tree.tree.scanMode": "open files",
    //
    // Extension - Dev Containers
    // command on PowerShell: code --list-extensions
    //
    "dev.containers.defaultExtensions": [
        "bibhasdn.unique-lines", // Installed
        // "bierner.markdown-mermaid", // Not Required
        "bierner.markdown-preview-github-styles", // Installed
        // "bpruitt-goddard.mermaid-markdown-syntax-highlighting", // Global
        // "docker.docker", // Global
        "eamodio.gitlens", // Installed
        "github.copilot", // Installed
        "github.copilot-chat", // Installed
        // "grapecity.gc-excelviewer", // Not Required
        "gruntfuggly.todo-tree", // Installed
        // "hediet.vscode-drawio", // Global
        // "janisdd.vscode-edit-csv", // Not Required
        "jsynowiec.vscode-insertdatestring", // Installed
        // "marp-team.marp-vscode", // Not Required
        // "mechatroner.rainbow-csv", // Not Required
        "mhutchie.git-graph", // Installed
        // "mishkinf.goto-next-previous-member", // Global
        "ms-azuretools.vscode-docker", // Installed
        "ms-ceintl.vscode-language-pack-ja", // Installed
        // "ms-vscode-remote.remote-containers", // Global
        // "ms-vscode-remote.remote-ssh", // Global
        // "ms-vscode-remote.remote-ssh-edit", // Global
        // "ms-vscode-remote.remote-wsl", // Global
        // "ms-vscode-remote.vscode-remote-extensionpack", // Global
        // "ms-vscode.remote-explorer", // Global
        // "ms-vscode.remote-server", // Global
        "nemesv.copy-file-name", // Installed
        // "phoihos.csv-to-md-table", // Not Required
        // "pkief.material-icon-theme", // Global
        "redhat.vscode-yaml", // Installed
        "takumii.markdowntable", // Installed
        // "tomoki1207.pdf", // Global
        "wmaurer.change-case", // Installed
        // "yzane.markdown-pdf", // Not Required
        "yzhang.markdown-all-in-one", // Installed
    ],
    "dev.containers.executeInWSL": true,
    "dev.containers.executeInWSLDistro": "Ubuntu-22.04",
    //
    // Extension - Remote Explorer
    //
    "remote-explorer.foldersSortOrder": "alphabetical",
    //
    // Extension - Remote - SSH
    //
    "remote.SSH.remotePlatform": {
        "devbase": "linux",
        "xdev-test-a8v2-api01": "linux",
        "stg-a8v2-app03": "linux",
        "stg-a8v2-app01": "linux",
        "sales-limit02": "linux",
        "nfs-prod": "linux",
        "nfs-xdev": "linux"
    },
    "remote.SSH.useLocalServer": false,
    //
    // Extension - Excel Viewer
    //
    "csv-preview.formatValues": "unquoted",
    "csv-preview.lineNumbers": "source",
    "csv-preview.resizeColumns": "all",
    "csv-preview.capitalizeHeaders": false,
    //
    // Extension - Insert Date String
    //
    "insertDateString.format": "YYYY/MM/DD hh:00:00",
    "insertDateString.formatDate": "YYYY/MM/DD",
    //
    // ############################## End ##############################
    //
    "": "",
}
